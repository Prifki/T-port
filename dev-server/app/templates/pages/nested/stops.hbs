{{> html/start title="T-port - Stops" settings=settings }}
{{> html/header }}
	<main>
		<div class="substrate">
			<h2>Stops</h2>
			<div class="filters">
				{{> html/number_filtering_menu }}
				{{> html/route_filtering_menu }}
			</div>
			<div class="table-wrapper">
			<div class="table-open-editor-tools-button" onclick="editTable(this)"><i class="material-icons">settings</i></div>
				<table id="stops-table">
					<tr>
						<th>Name</th>
						<th>Number<i class="material-icons">arrow_drop_up</i></th>
						<th>Routes</th>
					</tr>
				</table>
			</div>
			<div class="card">
				<div class="bookmark-button" onclick="addToFavorites(this)" wfd-id="102"><i class="material-icons">bookmark_border</i></div>
				<div class="closing-button" onclick="closeCard(this)"><i class="material-icons close-pic">close</i></div>
				<h3>Stop name</h3>
				<div class="table-wrapper" id="stop-card--wrapper">
					<div class="table-open-editor-tools-button" onclick="editTable(this)"><i class="material-icons">settings</i></div>
					<table>
					</table>
				</div>
					<div class="google-map-on-card">
						<!-- Google Maps -->
						<div id="map"></div>
						<script type="text/javascript" src="/static-assets/js/google-map.js" async></script>
						<script async defer
						src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZFGV9mhO59Iuq-gVjzw5CSdXQm4Ibuvc&callback=initMap">
						</script>
						<!-- /Google Maps -->
					</div>
			</div>
		</div>

{{> html/footer }}
{{> html/end }}